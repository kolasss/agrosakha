/ %h4 Список организаций

.indextable
  %table.table.table-hover.table-condensed
    %tr
      / %th User
      %th Наименование
      %th ИНН
      %th Населенный пункт
      / %th Район
      %th Адрес
      %th Телефон
      / %th Описание
      %th
      %th

    - @profiles.each do |profile|
      %tr
        / %td= profile.user.name
        %td= link_to profile.name, profile
        %td= profile.inn
        / %td= profile.city.name if profile.city
        %td
          = profile.region.name if profile.region
          = "/ " + profile.city.name if profile.city
        %td= profile.address
        %td= profile.phone
        / %td= profile.desc
        %td
          - if can? :update, profile
            = link_to 'Изменить', edit_profile_path(profile), class: "btn btn-mini btn-info"
        %td
          - if can? :destroy, profile
            = link_to 'Удалить', profile, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-mini btn-danger"

.apple_pagination
  = will_paginate @profiles

%br
- if current_user && current_user.profile
  = link_to 'Изменить профиль своей организации', edit_profile_path(current_user.profile), {class: 'btn'}
- elsif can? :create, Profile
  = link_to 'Создать профиль своей организации', new_profile_path, {class: 'btn'}