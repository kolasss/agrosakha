.indextable
  %table.table.table-hover.table-condensed
    - @buys.each do |buy|
      %tr
        / %td
        /   %b= custom_format(buy.updated_at)
        /   %br
        /   = buy.updated_at.to_s :time
        %td
          = link_to image_tag(buy.image.url(:thumb)), buy
        %td
          %p.category
            = buy.category.name if buy.category
            = "/ " + buy.subcategory.name if buy.subcategory
          %h5
            = link_to buy.title, buy
          %p.price
            = number_to_currency buy.price, strip_insignificant_zeros: true
            = ' за ' + buy.count_type.name if buy.count_type
          %p.profile
            = link_to buy.user.profile.name, buy.user.profile if buy.user.profile
          - if buy.city
            %p.city
              = buy.city.region.name
              = " - " + buy.city.name
        %td
          - if can? :update, buy
            = link_to 'Изменить', edit_buy_path(buy), class: "btn btn-mini btn-info"
        %td
          - if can? :destroy, buy
            = link_to 'Удалить', buy, :method => :delete, :data => { :confirm => 'Вы уверены?' }, class: "btn btn-mini btn-danger"
    - if @buys.empty?
      Объявлений нет
      
.apple_pagination
  = will_paginate @buys

- if can? :create, Buy
  = link_to 'Подать объявление о покупке', new_buy_path, {class: 'btn btn-success'}
