%h2 Покупка

= search_form_for @q do |f|
	= f.label :title_cont, 'Поиск по заголовку'
	= f.text_field :title_cont
	= f.label :city_id_eq, "Фильтр по населенному пункту"
	= f.collection_select :city_id_eq, @cities, :id, :name, {:include_blank => "Все"}
	= f.label :region_id_eq, "Фильтр по региону"
	= f.collection_select :region_id_eq, @regions, :id, :name, {:include_blank => "Все"}
	= f.submit "Применить"

.sellsblock
	= render 'buys'