- content_for :head do
  %meta{:content => @buy.subcategory.nil? ? @buy.category.name : @buy.category.name+", "+@buy.subcategory.name, :name => "keywords"}
  
/ %p#notice= notice
- if can? :update, @buy
  = link_to 'Изменить', edit_buy_path(@buy), class: "btn-u btn-u-blue btn-u-small headbtn"
%h4
  = @buy.title
- if @buy.image.file?
  .thumbnail
    = image_tag @buy.image.url(:large)
%p
  = raw @buy.body
%table.table.table-condensed.table-striped
  %tr
    %td
      Цена
    %td
      = number_to_currency @buy.price
      = ' за ' + @buy.count_type.name if @buy.count_type
  %tr
    %td 
      Количество
    %td
      = number_with_precision @buy.count, precision: 2, strip_insignificant_zeros: true
      = ' ' + @buy.count_type.name if @buy.count_type
  %tr
    %td 
      Категория
    %td
      = @buy.category.name
      = "/ " + @buy.subcategory.name if @buy.subcategory
  - if @buy.city
    %tr
      %td 
        Населенный пункт
      %td
        = @buy.city.region.name + ' район'
        = "/ " + @buy.city.name
  %tr
    %td 
      Организация
    %td
      = link_to @buy.user.profile.name, @buy.user.profile if @buy.user.profile
  - if @buy.user.profile.phone && !@buy.user.profile.phone.empty?
    %tr
      %td 
        Телефон
      %td
        = @buy.user.profile.phone
  - if @buy.user.profile.address && !@buy.user.profile.address.empty?
    %tr
      %td 
        Адрес
      %td
        = @buy.user.profile.address
  %tr
    %td 
      Создано
    %td
      = l(@buy.updated_at, :format => :long)

= link_to 'Назад', :back, class: "btn"
