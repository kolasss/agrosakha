%h2
  Обновление учетной записи
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :name, :autofocus => true
  = f.input :email, :required => true
  = f.input :password, :autocomplete => "off", :hint => "Оставьте пустым, если не хотите изменять пароль", :required => false
  = f.input :password_confirmation, :required => false
  = f.input :current_password, :hint => "Требуется ваш пароль для подтверждения изменений", :required => true
  = f.button :submit, 'Обновить', :class => 'btn-primary'

%p
  = link_to "Удалить учетную запись", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete
/ = link_to "Назад", :back
