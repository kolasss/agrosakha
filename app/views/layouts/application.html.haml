!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Agrosakha.ru"
      %meta{:content => content_for?(:description) ? yield(:description) : "Agrosakha.ru", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)

        /HTML5 shim, for IE6-8 support of HTML5 elements
        /[if lt IE 9]
          %script{:src  => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
        /[if IE 6]
          = stylesheet_link_tag "ie6.css"
  %body{:class => "#{controller_name} #{action_name}"}
    #wrap
      .navbar.navbar-static-top
        %nav
          .container
            = render 'layouts/navigation'
      #main{:role => "main"}
        .container
          .content
            / .row-fluid.border_bottom
            /   .span3
            /     = render 'layouts/mainmenu'
            /   .span6
            /     = render 'layouts/advs'
            /     = render 'layouts/categories'
            /   .span3
            /     = render 'layouts/filter'
            .row
              
              .span9
                
                = render 'layouts/categories'
                = render 'layouts/advs'
                = render 'layouts/messages'
                = yield
              .span3
                .sidebar.span3{"data-spy"=>"affix", "data-offset-top"=>"100"}
                  = render 'layouts/addbutton'
                  = render 'layouts/mainmenu'
                  = render 'layouts/filter'
                / = render 'layouts/advs'
                

        / ! end of .container
        #push
      / ! end of #main
    / ! end of #wrap
    %footer.muted
      .container
        2013 Â©
        = link_to 'Fivetronics', 'http://fivetronics.com/'
