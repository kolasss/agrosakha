!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Agrosakha.ru"
      %meta{:content => content_for?(:description) ? yield(:description) : "Agrosakha.ru", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)

        /HTML5 shim, for IE6-8 support of HTML5 elements
        /[if lt IE 9]
          %script{:src  => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
        /[if IE 6]
          = stylesheet_link_tag "ie6.css"
  %body{:class => "#{controller_name} #{action_name}"}
    .navbar.navbar-static-top.navbar-inverse
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              / %nav.navbar-inner
              = render 'layouts/mainmenu'
          .row
            .span3
              = render 'layouts/categories'
            .span9
              = render 'layouts/messages'
              = yield
          %footer
      / ! end of .container
    / ! end of #main
