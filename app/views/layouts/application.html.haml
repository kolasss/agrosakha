!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Agrosakha.ru"
      %meta{:content => content_for?(:description) ? yield(:description) : "Agrosakha.ru", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)

        /HTML5 shim, for IE6-8 support of HTML5 elements
        /[if lt IE 9]
          %script{:src  => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
        /[if IE 6]
          = stylesheet_link_tag "ie6.css"
  %body{:class => "#{controller_name} #{action_name}"}
    #wrap
      .navbar.navbar-static-top
        %nav
          .container
            = render 'layouts/navigation'
      #main{:role => "main"}
        .container
          .content
            .row
              .span3
                - if can? :create, Sell
                  = link_to 'Подать объявление', new_sell_path, {class: 'btn btn-success btn-large advbtn input-block-level'}
                - elsif can? :create, Buy
                  = link_to 'Подать объявление', new_buy_path, {class: 'btn btn-success btn-large advbtn input-block-level'}
                .well.well-small
                  = render 'layouts/mainmenu'
                = render 'layouts/categories'
              .span9
                - if params[:controller] == "sells" || params[:controller] == "buys" || params[:controller] == "home"
                  = render 'layouts/advs'
                = render 'layouts/messages'
                = yield

        / ! end of .container
        #push
      / ! end of #main
    / ! end of #wrap
    %footer.muted
      .container
        2013 ©
        = link_to 'Fivetronics', 'http://fivetronics.com/'
