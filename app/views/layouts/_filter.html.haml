= search_form_for @q, :url => filter_url, :class => "well well-small searchform" do |f|
	.searchblock
		- if params[:controller] == "profiles"
			= f.label :name_cont, 'Поиск по наименованию'
			= f.text_field :name_cont
		- else
			= f.label :title_cont, 'Поиск по заголовку'
			= f.text_field :title_cont
	.searchblock
		= f.label :region_id_eq, 'Фильтр по району'
		= f.collection_select :region_id_eq, @regions, :id, :name, {:include_blank => "Все"}
	/.clearfix
	= f.submit "Применить", class: "btn-u btn-u-blue btn-filter"
