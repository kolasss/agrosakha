= simple_form_for(@category) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    - if @category.default_image_file_name == 'missing.png'
      = image_tag("/images/missing/large/#{@category.default_image_file_name}", class: "img-polaroid")
    - else
      = image_tag("#{@category.default_image.url(:large)}", class: "img-polaroid")
    = f.input :default_image, as: :file
    = f.input :sort_id

  .form-actions
    = f.button :submit, :class => 'btn-u btn-u-blue'
